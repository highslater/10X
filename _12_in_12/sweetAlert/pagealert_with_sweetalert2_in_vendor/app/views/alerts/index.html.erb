<p id="notice"><%= notice %></p>
<h1>Alerts</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @alerts.each do |alert| %>
      <tr>
        <td><%= alert.name %></td>
        <td><%= alert.category %></td>
        <td><%= link_to 'Show', alert %></td>
        <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
        <td><%= link_to 'Destroy', alert, method: :delete %></td>
        <td> <button class="swalert">alert</button></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Alert', new_alert_path %>