<p id="notice"><%= notice %></p>
<h1>Alerts</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @alerts.each do |alert| %>
      <tr>
        <td><%= alert.name %></td>
        <td><%= alert.category %></td>
        <td><%= link_to 'Show', alert, method: :get, data: { confirm: 'Click OK to go to the SHOW page' } %></td>
        <td><%= link_to 'Edit', edit_alert_path(alert), method: :get, data: { confirm: 'Click OK to go to the EDIT page' } %></td>
        <td><%= link_to 'Destroy', alert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Alert', new_alert_path %>