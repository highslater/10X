<p id="notice"><%= notice %></p>
<h1>Alerts</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @alerts.each do |alert| %>
      <tr>
        <td><%= alert.name %></td>
        <td><%= alert.category %></td>
        <td><%= link_to 'Show', alert,
        data: {
          confirm: 'Really ?',
          swal: {
            text: "Go There ?",
            type: 'question',
            confirm_button_text: "Go !",
            cancel_button_text: "Stay !",
            timer: 5000,
          } } %></td>
        <td><%= link_to 'Edit', edit_alert_path(alert),
        data: {
          confirm: 'Really ?',
          swal: {
            text: "Go There ?",
            type: 'question',
            confirm_button_text: "Go !",
            cancel_button_text: "Stay !",
            timer: 5000,
          } } %></td>
        <td><%= link_to 'Destroy', alert, method: :delete,
        data: {
          confirm: 'Really ?',
          swal: {
            text: "Delete ?",
            type: 'warning',
            confirm_button_text: "Yuppers !",
            cancel_button_text: "Nope !",
            timer: 5000,
          },
          } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Alert', new_alert_path %>