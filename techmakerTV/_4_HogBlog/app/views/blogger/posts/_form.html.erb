<%= form_for(post, url: url) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-4">
      <!-- card -->
      <!-- -->
      <div class="card">
        <div class="card-block">
          <% if @post.new_record? %>
            <h4 class="card-title">New Post</h4>
          <% else %>
            <h4 class="card-title">
              <b>Edit: </b>
              <span class="thin-text"><%= @post.title %></span>
            </h4>
          <% end %>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item  bg-secondary">
            <div class="field">
              <%= f.label :title %>
              <%= f.text_field :title,  class: "form-control" %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= f.label :banner_image_url %>
              <%= f.text_field :banner_image_url,  class: "form-control" %>
            </div>
          </li>
          <!-- tinyMCE -->
          <!-- -->
          <li class="list-group-item">
            <div class="field">
              <%= f.label :description %>
              <%= f.text_area :description %>
            </div>
          </li>
          <li class="list-group-item"></li>
          <!-- -->
          <!-- /tinyMCE -->
          <li class="list-group-item" >
            <div class="actions">
              <%= f.submit "Save Blog Post", class: "btn btn-secondary btn-block btn-lg" %>
            </div>
          </li>
          <!-- buttons -->
          <!-- -->
          <li class="list-group-item" >
            <div class="actions " >
              <% if @post.persisted? %>
                <%= link_to ' Show ', blogger_post_path(@post), class: "btn btn-secondary float-right" %>
              <% end %>
              <%= link_to ' Back ', blogger_posts_path, class: "btn btn-secondary float-left" %>
            </div>
          </li>
          <!-- -->
          <!-- /buttons -->
        </ul>
      </div>
      <!-- -->
      <!-- /card -->
      <!-- -->
    </div>
    <!-- tinyMCE -->
    <!-- -->
    <div class="col-md-8">
      <div class="field">
        <%= f.text_area :body %>
      </div>
    </div>
    <!-- -->
    <!-- /tinyMCE -->
  </div>
<% end %>