<tr>
  <td><%= link_to post.title, authors_post_path(post) %></td>
  <% if post.published %>
    <td><%= link_to 'UnPublish', unpublish_authors_post_path(post), method: :put, class: 'btn btn-sm btn-info' %></td>
  <% else %>
    <td><%= link_to 'Publish', publish_authors_post_path(post), method: :put, class: 'btn btn-sm btn-primary' %></td>
  <% end %>
  <td>*</td>
  <td>*</td>
  <td>*</td>
  <td><%= link_to 'Edit', edit_authors_post_path(post), class: 'btn btn-sm btn-warning' %></td>
  <td><%= link_to 'Remove', authors_post_path(post), class: 'btn btn-sm btn-danger', method: :delete, data: {confirm: 'Are You Sure ?'} %></td>
</tr>